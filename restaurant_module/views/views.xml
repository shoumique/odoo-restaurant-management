    <menuitem id="menu_root"
         name="Splot"
         web_icon="sale_management,static/description/icon.png"
        sequence="10"/>
    

    <menuitem id="restaurant_menu"
        name="Menu"
        parent="menu_root"
        action="menu_action"

        sequence="10"/>
    
  </data>

  

</odoo>